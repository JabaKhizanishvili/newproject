<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE install SYSTEM "http://web.magti.ge/pda/defines/xml/grid.dtd">
<install type="component" version="1.5.0">
	<filters class="page_filter_block" type="h">
		<filter name="lib_title" type="text" default="" label="Title"  class="kbd" />
		<filter name="DOOR_CONTROLLERS" type="text" default="" label="DOOR_CONTROLLERS"  class="kbd" />
		<filter name="active" type="state" default="-1" label="State">
			<option value="-1">Select State</option>
			<option value="0">Inactive</option>
			<option value="1">Active Status</option>
		</filter>
		<filter type="buttons" default="" submit_label="Filter" reset_label="Clear" show_reset= "1" />
	</filters>
	<params class="table table-bordered table-condensed table-hover table-striped">
		<param order="" type="number" default="" label="#" rclass="text-center" />
		<param order="" type="checkall" default="" label="" rclass="text-center"   />
		<param order="t.lib_title" type="editlink" label="Title" key="LIB_TITLE" rclass="text-left" T="1" Tscope="person" />
		<param order="t.lib_desc" type="print" label="Description" key="LIB_DESC" rclass="text-left" T="1" />
		<param order="" type="accessdoors" label="DOOR_CONTROLLERS" key="ID" rclass="text-left" limit_type="1" length="3" T="1" />
		<param order="t.active" type="state" label="State" rclass="text-center" state_id='ID' state_key="ACTIVE" />
		<param order="t.id" type="print" label="ID" rclass="text-center" hclass="text-center" key="ID" />
	</params>
</install>