<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE install SYSTEM "http://web.magti.ge/pda/defines/xml/grid.dtd">
<install type="component" version="1.5.0">
	<filters class="page_filter_block" type="h">
		<filter name="firstname" type="stext" default="" label="worker" class="kbd" />
		<!--<filter name="lastname" type="stext" default="" label="lastname" class="kbd" />-->
		<filter name="org" type="org" default="0" label="org" />
		<filter name="lib_title" type="stext" default="" label="HTYPE" class="kbd" />
		<filter name="start_date" type="calendar" default="" label="start date" />
		<filter name="end_date" type="calendar" default="" label="end date" />
		<filter name="tasktitle" type="stext" default="" label="task_title"/>
		<filter name="wstate" type="state" default="-1" label="State">
			<option value="-1">Select State</option>
			<option value="0">T_CONFIRMATION</option>
			<option value="1">T_CONFIRMED</option>
			<option value="2">T_DECLINED</option>
		</filter>
		<filter type="buttons" default="" submit_label="Filter" reset_label="Clear" show_reset= "1" />
	</filters>
	<params class="table table-bordered table-condensed table-hover table-striped">
		<param order="" type="number" default="" label="#" rclass="text-center" hclass="text-center" />
		<param order="" type="checkall" default="" label="" rclass="text-center" key="TASK_ID"  />
		<param order="FIRSTNAME" type="joinprint"  patern="FIRSTNAME LASTNAME" label="worker" key="WORKER" rclass="text-left" T="1" Tscope="person" />
		<param order="org" type="org" label="org" key="ORG" rclass="text-left" T="1"/>
		<param order="lib_title" type="print" label="HTYPE" key="LIB_TITLE" rclass="td_left" read_key="LOG" T="1"/>
		<param order="t.start_date" type="print" label="Holiday Start" key="START_DATE" rclass="text-center" />
		<param order="t.end_date" type="print" label="Holiday End" key="END_DATE" rclass="text-center" />
		<param order="t.day_count" type="print" label="DAY COUNT" rclass="text-center" key="DAY_COUNT" />
		<param order="t.replacing_workers" type="fpersons" label="replacing_workers" rclass="text-left" key="REPLACING_WORKERS" T="1" Tscope="person" />
		<param order="t.task_title" type="print" label="TASK_TITLE" key="TASK_TITLE"  link_key="TASK_ID"  read_key="LOG" rclass="td_left" T="1"/>
		<param order="t.task_create_date" type="print" label="Create Date" key="WCREATE_DATE" rclass="td_centered"   read_key="LOG"  />
		<param order="t.task_due_date" type="print" label="TASK_DUE_DATE" key="DUE_DATE" rclass="td_centered"   read_key="LOG"  late_key="LATENESS"   />
		<param order="t.state" type="approvestate" label="State" rclass="text-center" state_key="STATE" />
		<param order="t.task_id" type="print" label="ID" key="TASK_ID" rclass="text-center" hclass="text-center"  read_key="LOG"   />
	</params>
</install>
