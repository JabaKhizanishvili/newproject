<?xml version="1.0" encoding="UTF-8"?>
<install type="component" version="1.5.0">
	<params>
		<group>
			<param name="ORG" type="orgprint"  label="ORG" />
			<param name="PERSON" type="personprint"  label="PERSON" />
		</group>
		<param name="STAFF_SCHEDULE" type="staffschedule" printdata="1" default="-1" label="STAFF_SCHEDULE_UNIT" key="ID" must="1" />
		<param name="SALARY" type="number" default="" label="SALARY" />
		<param name="IBAN" type="text" default="" label="IBAN" />
		<param name="SALARY_PAYMENT_TYPE" default="2" type="radio" >
			<option value="1">Cash</option>
			<option value="2">Card</option>
		</param>
		<param name="CHIEFS" type="personsall" default="" label="CHIEFS" />
	</params>
	<params group="more">
		<param name="CONTRACT_TYPE" type="list" default="" label="CONTRACT_TYPE" must="1">
			<option value="-1">-</option>
			<option value="1">Standard Contract</option>
		</param>
		<param name="TABLENUM" type="text" default="" label="TABLENUM"  mask=""  />
		<param name="CONTRACTS_DATE" type="calendar" default="" label="CONTRACTS_DATE" must="1" />
		<param name="CONTRACT_END_DATE" type="calendar" default="" label="CONTRACT_END_DATE" must="1" />
		<param name="ACCOUNTING_OFFICES" type="officeschosen" label="ACCOUNTING_OFFICE"  />
		<!--<param name="TEST_DATE" type="calendar" default="" label="TEST_DATE" must="" />-->
		<param name="AUTO_OVERTIME" type="radio" default="0"  must="1" >
			<option value="1">On</option>
			<option value="0">Off</option>
		</param>
		<param name="CALCULUS_TYPE" type="list" default="-1" label="CALCULUS_TYPE"  must="1" >
			<option value="-1">Select CALCULUS_TYPE</option>
			<option value="1">Digital</option>
			<option value="2">Material</option>
			<option value="3">Excluded</option>
		</param>
		<param name="CALCULUS_REGIME" type="radio" default="1">
			<option value="1">Office</option>
			<option value="2">Distance</option>
		</param>
		<filter name="CATEGORY_ID" type="sql" default="" label="CATEGORY_ID" key_field="ID" value_field="LIB_TITLE" query="select id, lib_title from lib_categories t where t.active=1 order by t. lib_title asc" select_label="Select Category" must="1" />
		<param name="GRAPHTYPE" type="graphtype" default="" label="GRAPHTYPE" must="1" />
		<!--<param name="GRAPHGROUP" type="graphgroup" default="" label="GRAPHGROUP" />-->
		<param name="CHANGE_DATE" type="calendar" default="" label="CHANGE_DATE" must="1" />
		<param name="ID" type="hidden" default="" />
	</params>
</install>
