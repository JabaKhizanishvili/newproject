<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE install SYSTEM "http://apps.magticom.ge/pda/defines/xml/grid.dtd">
<install type="component" version="1.5.0">
	<filters class="page_filter_block" type="h">
		<filter name="lib_title" type="stext" default="" label="Title" class="kbd" />
		<filter name="worker" type="stext" default="" label="worker"  class="kbd" />
		<filter name="active" type="active" default="1" label="active" class="kbd" />
		<filter name="must" type="state" default="-1" label="Musttitle">
			<option value="-1">select category</option>
			<option value="1">Must</option>
			<option value="0">Notmust</option>
		</filter>
		<filter type="buttons" default="" submit_label="Filter" reset_label="Clear" show_reset= "1" />
	</filters>
	<params class="table table-bordered table-condensed table-hover table-striped">
		<param order="" type="number" default="" label="#" rclass="text-center" hclass="text-center"/>
		<param order="" type="checkall" default="" label="" rclass="text-center"   />
		<param order="t.lib_title" type="editlink" label="Title" key="LIB_TITLE" rclass="text-left" T="1" />
		<param order="t.lib_desc" type="print" label="Description" key="LIB_DESC" rclass="text-left" T="1" />
		<param order="t.worker" type="persons" label="WORKER" key="WORKER" rclass="text-left" T="1" Tscope="person" />
		<param order="t.files" type="fileprint" label="files" key="FILES" rclass="text-left" />
		<param order="t.must" type="switch" label="Musttitle" rclass="text-center" key="MUST" hclass="text-center" >
			<option value="1">Must</option>
			<option value="0">Notmust</option>
		</param>
		<param order="t.active" type="state" label="State" rclass="text-center" state_id='ID' state_key="ACTIVE" hclass="text-center"/>
		<param order="t.ordering" type="print" label="ordering" key="ORDERING" rclass="text-center" />
		<param order="t.id" type="print" label="ID" key="ID" rclass="text-center" hclass="text-center"/>
	</params>
</install>
