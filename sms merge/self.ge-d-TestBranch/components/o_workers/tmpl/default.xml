<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install SYSTEM "http://web.magti.ge/pda/defines/xml/grid.dtd">
<install type="component" version="1.5.0">
	<filters class="table table-bordered table-condensed table-filter-vertical" type="v">
		<filter name="firstname" type="stext" default="" label="firstname" class="kbd"  />
		<filter name="lastname" type="stext" default="" label="lastname" class="kbd"  />
		<filter name="reason" type="state" default="1" label="Reason">
			<option value="-1">Select Reason</option>
			<option value="1">? - Unknown, with comment and minutes</option>
			<option value="2">with comment and no minutes</option>
			<option value="3">with comment</option>
		</filter>
		<filter name="org" type="org" default="0" label="org" />
		<!--<filter name="cat_id" type="category" default="-1" label="category"  />-->
		<!--<filter name="sphere" type="sphere" default="" label="sphere" />-->
		<!--<filter name="department" type="department" default="" label="department" />-->
		<!--<filter name="chapter" type="chapter" default="" label="chapter" />-->
		<!--
		<filter name="state" type="state" default="-1" label="State">
			<option value="-1">Select State</option>
			<option value="0">BL_CURRENT</option>
			<option value="1">BL_CLOSE</option>
			<option value="2">BL_CONFIRMED</option>
		</filter>
		-->
		<filter name="start_date" type="calendar" default="now -1 day" label="Start Date" />
		<filter name="end_date" type="calendar" default="now +1 day" label="End Date" />
		<filter type="buttons" default="" submit_label="Filter" reset_label="Clear" show_reset= "1" />
	</filters>
	<params class="table table-bordered table-condensed table-hover table-striped">
		<param order="" type="number" default="" label="#" rclass="text-center" />
		<param order="" type="checkall" default="" label="" rclass="text-center"   />
		<param order="wfirstname" type="editlink" label="worker" key="WFIRSTNAME, WLASTNAME" rclass="text-left" T="1" Tscope="person" />
		<param order="w.section_id" type="print" label="Section" rclass="text-left" key="SECTION" />
		<param order="t.start_date" type="print" label="visitorsReport Start G" key="START_DATE" rclass="text-center" />
		<param order="t.end_date" type="print" label="visitorsReport End G" key="END_DATE" rclass="text-center" />
		<param order="t.day_count" type="print" label="DAY COUNT G" rclass="text-center" key="DAY_COUNT" />
		<param order="approver" type="print" label="Author" rclass="text-center" key="APPROVER" />
		<param order="t.rec_date" type="print" label="BULLETIN_REC_DATE" rclass="text-center" key="REC_DATE" />
		<param order="t.status" type="bulletintype" label="status" rclass="text-center" state_id='ID' state_key="STATUS" />
		<param order="t.id" type="print" label="ID" key="ID" rclass="text-center" />
	</params>
</install>