<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE install SYSTEM "http://web.magti.ge/pda/defines/xml/grid.dtd">
<install type="component" version="1.5.0">
	<filters class="page_filter_block" type="h">
		<filter name="firstname" type="stext" default="" label="firstname" class="kbd" />
		<filter name="lastname" type="stext" default="" label="lastname" class="kbd" />
		<filter name="private_number" type="text" default="" label="private_number" />
		<filter name="position" type="stext" default="" label="position" class="kbd" />
		<filter name="tablenum" type="text" default="" label="TABLENUM" />
		<filter name="org" type="org" default="" label="org" />
		<filter name="unit" type="unit" default="" label="unit"  elementid="org" />
		<filter name="user_role" type="userrole" default="" label="User_Role" />
		<filter name="category" type="sql" default="" label="CATEGORY_ID" key_field="ID" value_field="LIB_TITLE" query="select id, lib_title from lib_categories t where t.active=1 order by t. lib_title asc" select_label="Select Category" must="" />
		<filter name="permit_id" type="text" default="" label="permit_id" />
		<filter name="graphtype" type="graphtype" default="" label="graphtype" />
		<filter name="graphgroup" type="graphgroup" default="" label="graphgroup" />
		<filter type="buttons" default="" submit_label="Filter" reset_label="Clear" show_reset= "1" />
	</filters>
	<params class="table table-bordered table-condensed table-hover table-striped" >
		<param order="" type="number" default="" label="#" rclass="text-center" />
		<param order="" type="checkall" default="" label="" rclass="text-center"   />
		<param order="t.firstname" type="editlink" label="FIRSTNAME" key="FIRSTNAME" rclass="text-left" Tscope="person" />
		<param order="t.lastname" type="editlink" label="LASTNAME" key="LASTNAME" rclass="text-left" Tscope="person" />
		<param order="" type="orgorg" label="ORG" key="ORG.ORG" rclass="text-left"  />
		<param order="" type="orgtip" label="STRUCTURE" key="ORG.ORGPLACE" tipkey="ORG.ORGPATH" rclass="text-left"  />
		<param order="" type="orgprint" label="position" key="ORG.POSITION" rclass="text-left"  length="2" limit_type="1" />
		<param order="t.active" type="wstatus" label="STATUS" rclass="text-center" key="ACTIVE" />
		<param order="t.id" type="print" label="ID" key="ID" rclass="text-center" />
	</params>
</install>