<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE install SYSTEM "http://web.magti.ge/pda/defines/xml/grid.dtd">
<install type="component" version="1.5.0">
	<filters class="page_filter_block" type="h">
		<filter name="lib_title" type="stext" default="" label="TEXT_SEARCH" class="kbd" />
		<filter name="active" type="active" default="" label="ACTIVE" />
		<filter type="buttons" default="" submit_label="Filter" reset_label="Clear" show_reset= "1" />
	</filters>
	<params class="table table-bordered table-condensed table-hover table-striped">
		<param order="" type="number" default="" label="#" rclass="text-center" hclass="text-center"/>
		<param order="" type="checkall" default="" label="" rclass="text-center"   />
		<param order="t.lib_title" type="editlink" label="Title" key="LIB_TITLE" rclass="text-left" T="1" />
		<param order="t.lib_desc" type="print" label="Description" key="LIB_DESC" rclass="text-left" T="1" />
		<param order="" type="switch" label="PERIODICITY" key="PERIODICITY" rclass="text-center">
			<option value="1">MONTH</option>
			<option value="2">QUARTER</option>
			<option value="3">YEAR</option>
		</param>
		<param order="" type="print" label="LIMIT" key="LIMIT" rclass="text-center"/>
		<param order="" type="atype" label="type" key="WAGE_TYPE" rclass="text-center" T="1" />
		<param order="" type="print" label="RESTART_DATE" key="RESTART_DATE" rclass="text-center" />
		<param order="" type="switch" label="SHOW_ON_PROFILE" key="SHOW_ON_PROFILE" rclass="text-center" >
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param order="flow" type="switch" label="FLOW" key="FLOW" rclass="text-center" >
			<option value="1">YES</option>
			<option value="0">NO</option>
		</param>
		<param order="t.active" type="state" label="State" rclass="text-center" state_id='ID' state_key="ACTIVE" hclass="text-center"/>
		<param order="t.ordering" type="print" label="ordering" key="ORDERING" rclass="text-center" hclass="text-center"/>
		<param order="t.id" type="print" label="ID" key="ID" rclass="text-center" />
	</params>
</install>
