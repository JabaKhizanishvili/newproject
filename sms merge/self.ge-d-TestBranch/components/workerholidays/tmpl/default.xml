		<param order="org" type="org" label="org" key="ORG" rclass="text-left" T="1"/>
		
		<param order="htitle" type="print" label="HOLIDAY INFORMATION" key="HTITLE" rclass="text-left" T="1"/>
		<param order="htype" type="htype" label="HTYPE" key="HTYPE" rclass="text-left" />
		<param order="t.status" type="approve" label="status" rclass="text-center" state_id='ID' state_key="STATUS" />

		<param order="t.start_date" type="print" label="Holiday Start" key="START_DATE" rclass="text-center" />
		<param order="t.end_date" type="print" label="Holiday End" key="END_DATE" rclass="text-center" />
		<param order="t.day_count" type="print" label="DAY COUNT" rclass="text-center" key="DAY_COUNT" />
		<param order="t.replacing_workers" type="fpersons" label="replacing_workers" rclass="text-left" key="REPLACING_WORKERS" T="1" />
		<param order="afirstname" type="printm" label="APPROVER" rclass="text-center" key="AFIRSTNAME, ALASTNAME" T="1" Tscope="person" />
		<param order="t.approve_date" type="print" label="APPROVE_DATE" rclass="text-center" key="APPROVE_DATE" />
		<param order="t.w_holiday_comment" type="print" label="comment" key="W_HOLIDAY_COMMENT" rclass="text-center" />

		<param order="t.rec_date" type="print" label="REC_DATE" key="REC_DATE" rclass="text-left" />
		<param order="t.rec_user" type="wworker" label="AUTHOR" key="REC_USER" rclass="text-left" T="1"/>

		<param order="t.id" type="print" label="ID" key="ID" rclass="text-center" />
	</params>
</install>
