<install type="component" version="1.5.0">
	<filters class="page_filter_block" type="h">
		<filter name="org" type="myorg" default="" label="org" />
		<filter name="start_date" type="calendar" default="" label="start date" />
		<filter name="end_date" type="calendar" default="" label="end date" />
		<!--<filter name="year" type="year" default="" label="year" />-->
		<filter name="hperiod" type="hperiod" default="now" label="hperiod"/>
		<filter type="buttons" default="" submit_label="Filter" reset_label="Clear" show_reset= "1" />
	</filters>
	<params class="table table-bordered table-condensed table-hover table-striped">
		<param order="" type="number" default="" label="#" rclass="text-center" />
