<!DOCTYPE table SYSTEM "http://web.magti.ge/pda/defines/xml/table.dtd">
<table name="slf_daily_benefits" history="yes">
	<columns>
		<column name="id" type="number" null="n"/>
		<column name="worker" type="number"/>
		<column name="org" type="number"/>
		<column name="rec_date" type="date"/>
		<column name="calc_date" type="date"/>
		<column name="period_id" type="number"/>
		
		<!--| from lib_f_benefit_types |-->
		<column name="lib_title" type="varchar2" length="500" />
		<column name="lib_desc" type="varchar2" length="4000" />
		<column name="class" type="number" default="00" />
		<column name="regularity" type="number" default="00" />
		<column name="cost" type="number" default="00" />
		<column name="share_type" type="number" default="00" />
		<column name="worker_share" type="number" default="00" />
		<column name="company_share" type="number" default="00" />
		<column name="gross_tax_type" type="number" default="00" />
		<column name="accrual_type" type="number" default="00" />
		<column name="accrual_set" type="number" />
		<column name="periodicity" type="number" default="00" />
		<column name="start_date" type="date" />
		<column name="end_date" type="date" />
		<column name="benefit" type="number" default="00" />
		<column name="type" type="number" default="00" />
		<column name="calculation_day" type="number" />
		<column name="income" type="number" default="00" />

		<!--| calculations |-->
		<column name="worker_minus" type="number"/>
		<column name="worker_plus" type="number"/>
		<column name="company_plus" type="number"/>
		<column name="accrued_income" type="number"/>
		<column name="accrued_pension" type="number"/>
		<column name="benefit_id" type="number"/>
		<column name="bind_id" type="number"/>
		<column name="status" type="number"/>
		<column name="sheet_id" type="number"/>
		<column name="gen_hash" type="varchar2" length="500" />
	</columns>
	<sequence  name="sqs_daily_benefits" />
</table>